<%-include('cabecalho.ejs')%>
<div class="my-3 justify-content-end" id="navbarSupportedContent">
    <form class="d-flex" method="post" role="search">
        <input class="form-control me-2" name="pesquisar" type="search" placeholder="Buscar"
            aria-label="Search">
        <button class="btn btn-secundary bg-danger bg-gradient p-2 " type="submit">Buscar</button>
    </form>                            
</div>
<table class="table table-hover rounded">
    <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Foto</th>
        <th>Perfil</th>
    </tr>
    <% Usuarios.forEach(function(usuario){ %>
    <tr>
        <td><%=usuario.nome%></td>
        <td><%=usuario.email%></td>
        <td>
            <img class="img-thumbnail img-fluid" src="/<%=usuario.foto%>" width="200" alt="Foto do post">
        </td>
        <td>
            <a href="/verperfil/<%=usuario._id%>">Perfil</a>
        </td>
    </tr>
    <%})%>
</table>

<%-include('rodape.ejs')%>